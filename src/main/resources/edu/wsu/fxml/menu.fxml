<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="menuRoot" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wsu.controller.MenuController">
   <BorderPane prefHeight="200.0" prefWidth="200.0">
      <top>
         <Label fx:id="title" alignment="TOP_CENTER" text="Nestor Runner" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
               <Font name="Blackadder ITC" size="100.0" />
            </font>
         </Label>
      </top>
      <bottom>
         <Label alignment="BOTTOM_CENTER" text="Created by James Summa, Jacob York, Noah Kelly, and Glenn Lane." BorderPane.alignment="CENTER">
            <font>
               <Font size="10.0" />
            </font>
         </Label>
      </bottom>
      <center>
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <Button fx:id="startGame" mnemonicParsing="false" onAction="#handleStartGameAction" style="-fx-background-color: BLACK;" text="Start Game" textFill="WHITE">
               <font>
                  <Font name="Franklin Gothic Medium" size="30.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <ComboBox fx:id="selectDifficulty" prefWidth="150.0" promptText="Select Difficulty" style="-fx-background-color: WHITE;">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ComboBox>
            <Button fx:id="howToPlay" mnemonicParsing="false" onAction="#handleHowToPlayAction" style="-fx-background-color: BLACK;" text="How To Play" textFill="WHITE">
               <font>
                  <Font name="Franklin Gothic Medium" size="20.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
            </Button>
         </VBox>
      </center>
      <StackPane.margin>
         <Insets />
      </StackPane.margin>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </BorderPane>
</StackPane>
