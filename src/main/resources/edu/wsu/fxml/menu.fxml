<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="menuRoot" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wsu.controller.MenuController">
   <Pane fx:id="menuBackground" prefHeight="200.0" prefWidth="200.0" />
   <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
      <Label fx:id="title" text="Nestor Runner">
         <font>
            <Font name="Blackadder ITC" size="100.0" />
         </font>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </Label>
      <VBox fx:id="buttons" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <Button fx:id="startGame" mnemonicParsing="false" onAction="#startGame" style="-fx-background-color: BLACK;" text="Start Game" textFill="WHITE">
            <font>
               <Font name="Franklin Gothic Medium" size="30.0" />
            </font>
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </Button>
         <Button fx:id="howToPlay" mnemonicParsing="false" style="-fx-background-color: BLACK;" text="How To Play" textFill="WHITE">
            <font>
               <Font name="Franklin Gothic Medium" size="20.0" />
            </font>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </Button>
      </VBox>
      <Label text="Created by James Summa, Jacob York, Noah Kelly, and Glenn Lane.">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
   </VBox>
</StackPane>
