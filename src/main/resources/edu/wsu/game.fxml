<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="gameRoot" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wsu.view.GameViewImpl">
   <Pane fx:id="gameBackground" prefHeight="200.0" prefWidth="200.0"/>
   <VBox fx:id="gameWindow" prefHeight="391.0" prefWidth="600.0">
      <StackPane fx:id="playSpace" prefHeight="450.0" prefWidth="600.0">
         <Pane fx:id="scrolling" prefHeight="200.0" prefWidth="200.0">
            <Rectangle fx:id="enemy" arcHeight="5.0" arcWidth="5.0" fill="RED"
              height="40.0" layoutX="400.0" layoutY="123.0" stroke="BLACK"
              strokeType="INSIDE" width="40.0"/>
            <Rectangle fx:id="shortObstacle" arcHeight="5.0" arcWidth="5.0" fill="#00ff09"
              height="40.0" layoutX="416.0" layoutY="300.0" stroke="BLACK"
              strokeType="INSIDE" width="30.0"/>
            <Rectangle fx:id="tallObstacle" arcHeight="5.0" arcWidth="5.0" fill="#00ff09"
              height="70.0" layoutX="363.0" layoutY="270.0" stroke="BLACK"
              strokeType="INSIDE" width="30.0"/>
         </Pane>
         <Pane fx:id="playerPane" prefHeight="200.0" prefWidth="600.0">
            <GridPane fx:id="scoreWindow" alignment="CENTER" prefHeight="78.0"
              prefWidth="122.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               </rowConstraints>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
               </padding>
               <Label fx:id="scoreLabel" text="Score: ">
                  <font>
                     <Font name="Franklin Gothic Medium" size="20.0"/>
                  </font>
               </Label>
               <Label fx:id="score" text="0000" GridPane.rowIndex="1">
                  <font>
                     <Font name="Franklin Gothic Medium Italic" size="30.0"/>
                  </font>
               </Label>
            </GridPane>
            <Rectangle fx:id="player" arcHeight="5.0" arcWidth="5.0" fill="#0084ff"
              height="50.0" layoutX="90.0" layoutY="290.0" stroke="BLACK"
              strokeType="INSIDE" width="50.0"/>
            <Rectangle fx:id="proj" arcHeight="5.0" arcWidth="5.0" fill="WHITE"
              height="15.0" layoutX="150.0" layoutY="310.0" stroke="BLACK"
              strokeType="INSIDE" width="40.0"/>
         </Pane>
      </StackPane>
      <Pane fx:id="ground" prefHeight="175.0" prefWidth="600.0"
        style="-fx-background-color: BLACK;"/>
   </VBox>
   <StackPane fx:id="endScreen" prefHeight="150.0" prefWidth="200.0">
      <Pane fx:id="grayFilter" opacity="0.75" prefHeight="200.0" prefWidth="200.0"
        style="-fx-background-color: GRAY;"/>
      <VBox fx:id="gameEndMenu" alignment="CENTER" prefWidth="336.0"
        StackPane.alignment="CENTER">
         <Label fx:id="resultsTitle" text="Game Over!" textFill="WHITE">
            <VBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
            <font>
               <Font name="Blackadder ITC" size="100.0"/>
            </font>
         </Label>
         <Button fx:id="playAgain" mnemonicParsing="false"
           style="-fx-background-color: BLACK;" text="Play Again" textFill="WHITE">
            <VBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
            <font>
               <Font name="Franklin Gothic Medium" size="20.0"/>
            </font>
            <cursor>
               <Cursor fx:constant="HAND"/>
            </cursor>
         </Button>
         <Button fx:id="mainMenu" mnemonicParsing="false" style="-fx-background-color: BLACK;"
           text="Main Menu" textFill="WHITE" onAction="#switchToMenuView">
            <VBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </VBox.margin>
            <font>
               <Font name="Franklin Gothic Medium" size="20.0"/>
            </font>
            <cursor>
               <Cursor fx:constant="HAND"/>
            </cursor>
         </Button>
      </VBox>
   </StackPane>
</StackPane>
